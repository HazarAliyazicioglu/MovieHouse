@{
    ViewData["Title"] = "Yeni Liste Oluştur - MovieHouse";
}

<div class="create-list-container">
    <div class="create-list-header">
        <h1><i class="fas fa-plus-circle"></i> Yeni Liste Oluştur</h1>
        <p>Film listenizi oluşturun ve yönetin</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            @ViewBag.Error
        </div>
    }

    <div class="create-list-form">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="name">
                    <i class="fas fa-tag"></i> Liste Adı *
                </label>
                <input type="text" id="name" name="name" class="form-control" required 
                       placeholder="Örn: En Sevdiğim Filmler, İzlemek İstediklerim">
            </div>

            <div class="form-group">
                <label for="description">
                    <i class="fas fa-align-left"></i> Açıklama
                </label>
                <textarea id="description" name="description" class="form-control" rows="4"
                          placeholder="Listeniz hakkında kısa bir açıklama yazın (isteğe bağlı)"></textarea>
            </div>

            <div class="form-actions">
                <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Liste Oluştur
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
} 